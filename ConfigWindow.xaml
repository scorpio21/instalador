<Window x:Class="Instalador.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuración del Proyecto" Height="450" Width="600"
        Background="{StaticResource DarkBg}"
        Foreground="{StaticResource TextLight}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ThreeDBorderWindow">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="AJUSTES DEL PROYECTO" FontWeight="Bold" FontSize="18" Foreground="{StaticResource PrimaryBlue}" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <!-- Nombre -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Nombre del Proyecto" Margin="0,0,0,5" Foreground="#999"/>
                <TextBox x:Name="TxtNombreProyecto"/>
            </StackPanel>

            <!-- Version -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Versión" Margin="0,0,0,5" Foreground="#999"/>
                <TextBox x:Name="TxtVersion"/>
            </StackPanel>

            <!-- Ruta Proyecto -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Ruta del Proyecto" Margin="0,0,0,5" Foreground="#999"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtRutaProyecto"/>
                    <Button Grid.Column="1" Content="Buscar..." Margin="10,0,0,0" Click="BtnBuscarProyecto_Click" Width="80"/>
                </Grid>
            </StackPanel>

            <!-- Ruta Publicacion -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Ruta de Publicación" Margin="0,0,0,5" Foreground="#999"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtRutaPublicacion"/>
                    <Button Grid.Column="1" Content="Buscar..." Margin="10,0,0,0" Click="BtnBuscarPublicacion_Click" Width="80"/>
                </Grid>
            </StackPanel>

            <!-- Ruta Inno -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock Text="Ruta de Inno Setup (ISCC.exe)" Margin="0,0,0,5" Foreground="#999"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtRutaInnoSetup"/>
                    <Button Grid.Column="1" Content="Buscar..." Margin="10,0,0,0" Click="BtnBuscarInno_Click" Width="80"/>
                </Grid>
            </StackPanel>
        </StackPanel>

        <!-- Botones Pie -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancelar" Click="BtnCancelar_Click" Margin="0,0,10,0" Width="100"/>
            <Button Content="Guardar Cambios" Style="{StaticResource AccentButton}" Click="BtnGuardar_Click" Width="150"/>
        </StackPanel>
    </Grid>
</Window>
