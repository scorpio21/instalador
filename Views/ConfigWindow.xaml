<Window x:Class="Instalador.Views.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Proyectos" Height="550" Width="850"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ThreeDBorderWindow"
        Icon="pack://application:,,,/img/ico/Installer.ico">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar: Lista de Proyectos -->
        <Border Grid.Column="0" Background="#252525" BorderBrush="#33FFFFFF" BorderThickness="0,0,1,0">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="PROYECTOS" FontWeight="Bold" Foreground="#007ACC" Margin="5,0,0,10"/>

                <ListBox x:Name="ListProyectos" Grid.Row="1" Background="Transparent" BorderThickness="0"
                         ItemsSource="{Binding Proyectos}" SelectedItem="{Binding ProyectoSeleccionado}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="8" Margin="0,2" CornerRadius="4" Background="#33FFFFFF">
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="{StaticResource IconArchivo}" Fill="White" Width="10" Height="10" Stretch="Uniform" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Nombre}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Añadir" Style="{StaticResource SecondaryButton}" Command="{Binding AddCommand}" Width="80" Margin="5"/>
                    <Button Content="Eliminar" Style="{StaticResource SecondaryButton}" Command="{Binding DeleteCommand}" Width="80" Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content: Detalles -->
        <Grid Grid.Column="1" Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel DataContext="{Binding ProyectoSeleccionado}" Visibility="{Binding Converter={StaticResource NullToVisibilityConverter}}">
                    <TextBlock Text="DETALLES DEL PROYECTO" FontWeight="Bold" FontSize="18" Margin="0,0,0,20"/>

                    <TextBlock Text="Nombre del Proyecto" Foreground="#999" FontSize="11" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Nombre, UpdateSourceTrigger=PropertyChanged}" Height="35" Margin="0,0,0,15"/>

                    <TextBlock Text="Versión del Instalador" Foreground="#999" FontSize="11" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding VersionInstalador, UpdateSourceTrigger=PropertyChanged}" Height="35" Margin="0,0,0,15"/>

                    <TextBlock Text="Ruta del Proyecto (.csproj)" Foreground="#999" FontSize="11" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <TextBox Text="{Binding RutaProyecto, UpdateSourceTrigger=PropertyChanged}" Height="35"/>
                        <Button Grid.Column="1" Content="..." Width="40" Click="BtnSeleccionarProyecto_Click" Margin="5,0,0,0"/>
                    </Grid>

                    <TextBlock Text="Directorio de Publicación" Foreground="#999" FontSize="11" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                        <TextBox Text="{Binding RutaPublicacion, UpdateSourceTrigger=PropertyChanged}" Height="35"/>
                        <Button Grid.Column="1" Content="..." Width="40" Click="BtnSeleccionarPublicacion_Click" Margin="5,0,0,0"/>
                    </Grid>

                    <TextBlock Text="OPCIONES DE PUBLICACIÓN" Foreground="#999" FontSize="11" Margin="0,10,0,5"/>
                    <Border Background="#2D2D2D" Padding="15" CornerRadius="4" Margin="0,0,0,15">
                        <StackPanel>
                            <CheckBox IsChecked="{Binding ReadyToRun}" Content="Optimizar (ReadyToRun)" Foreground="White" Margin="0,0,0,10"/>
                            <CheckBox IsChecked="{Binding Trimmed}" Content="Recortar Tamaño (Trimmed/Experimental)" Foreground="White" Margin="0,0,0,10"/>
                            <CheckBox IsChecked="{Binding Compressed}" Content="Compresión de Archivo Único" Foreground="White"/>
                        </StackPanel>
                    </Border>

                    <Separator Background="#22FFFFFF" Margin="0,10,0,20"/>

                    <TextBlock Text="CONFIGURACIÓN GLOBAL" FontWeight="Bold" FontSize="14" Margin="0,0,0,15" Foreground="#007ACC"/>
                    
                    <TextBlock Text="Ruta ISCC.exe (Inno Setup)" Foreground="#999" FontSize="11" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Text="{Binding DataContext.RutaInnoSetup, RelativeSource={RelativeSource AncestorType=Window}, UpdateSourceTrigger=PropertyChanged}" Height="35"/>
                        <Button Grid.Column="1" Content="..." Width="40" Click="BtnSeleccionarInno_Click" Margin="5,0,0,0"/>
                        <Button Grid.Column="2" Content="Auto-Detectar" Style="{StaticResource SecondaryButton}" 
                                Command="{Binding DataContext.DetectCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                Margin="5,0,0,0" Padding="10,0"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

            <!-- Placeholder si no hay proyecto -->
            <TextBlock Text="Seleccione o añada un proyecto para comenzar" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       Foreground="#555" FontSize="16"
                       Visibility="{Binding ProyectoSeleccionado, Converter={StaticResource NullToVisibilityConverter}, ConverterParameter=Inverse}"/>

            <!-- Botones Pie -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="CANCELAR" Style="{StaticResource SecondaryButton}" Click="BtnCancelar_Click" Width="100" Margin="0,0,10,0"/>
                <Button Content="GUARDAR CAMBIOS" Style="{StaticResource AccentButton}" Click="BtnGuardar_Click" Width="180" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
